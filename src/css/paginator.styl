.paginator
  font-size: 12px
  line-height: 16.4px
  text-align: center

  .paginator-button
    @extends $reset-button
    margin: 5px

    &:hover
      background: #43bbfd
      color: white

  .paginator-icon
    font-size: 24px
    font-weight: lighter
    padding: .1em
    position: relative
    top: .1em

  .paginator-page-selector
    display: inline-block
    margin-left: .25em
    margin-right: .25em
